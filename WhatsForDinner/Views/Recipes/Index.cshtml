@{
  Layout = "_Layout";
}
@using WhatsForDinner.Models;
@model List<WhatsForDinner.Models.Recipe>

@if(Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
}
else
{
    <h3>Breakfast Recipes</h3>
    @foreach(Recipe recipe in Model)
    {
      if(recipe.isBreakfast){
        <p>@Html.ActionLink($"{recipe.Title}", "Details", new {id = recipe.RecipeId})</p>
      }
    }
    <h3>Lunch Recipes</h3>
    @foreach(Recipe recipe in Model)
    {
      if(recipe.isLunch){
        <p>@Html.ActionLink($"{recipe.Title}", "Details", new {id = recipe.RecipeId})</p>
      }
    }
    <h3>Dinner Recipes</h3>
    @foreach(Recipe recipe in Model)
    {
      if(recipe.isDinner){
        <p>@Html.ActionLink($"{recipe.Title}", "Details", new {id = recipe.RecipeId})</p>
      }
    }
}

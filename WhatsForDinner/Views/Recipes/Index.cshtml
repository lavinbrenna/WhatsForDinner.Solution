@{
  Layout = "_Layout";
}
@using WhatsForDinner.Models;
@model List<WhatsForDinner.Models.Recipe>

@if(Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
}
else
{
  <ul>
    @foreach(Recipe recipe in Model)
    {
      <li>@Html.ActionLink($"{recipe.Title}", "Details", new {id = recipe.RecipeId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add Recipe", "Create")</p>
<p>@Html.ActionLink("Import Recipe","Import")</p>
<p>@Html.ActionLink("Home", "Index", "Account")</p>
@{
  Layout = "_Layout";
}

@using System.Security.Claims
@using WhatsForDinner.Models;
@model WhatsForDinner.Models.ApplicationUserWeek;

@if(User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!
    @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-default" value="Log out"/>
  }
  </p>
  <h2>Upcoming Recipes</h2>
  <ul>

    <li>@Html.ActionLink($"{@Model.RecipeWeek.Week[0].Dinner.Title}", "Details", "Recipes", new {id = $"{@Model.RecipeWeek.Week[0].Dinner.RecipeId}"})</li>
    <li>@Html.ActionLink($"{@Model.RecipeWeek.Week[1].Dinner.Title}", "Details", "Recipes", new {id = $"{@Model.RecipeWeek.Week[1].Dinner.RecipeId}"})</li>
    <li>@Html.ActionLink($"{@Model.RecipeWeek.Week[2].Dinner.Title}", "Details", "Recipes", new {id = $"{@Model.RecipeWeek.Week[2].Dinner.RecipeId}"})</li>
  </ul>

}


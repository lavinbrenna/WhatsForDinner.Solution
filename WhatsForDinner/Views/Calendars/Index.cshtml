@{
  Layout = "_Layout";
}
@using WhatsForDinner.Models;
@model List<WhatsForDinner.Models.ApplicationUserWeek>

@if(Model.Count == 0)
{
  <h3>No meal plans have been created yet!</h3>
}
else
{
  <ul>
  @foreach(ApplicationUserWeek applicationUserWeek in Model)
  {
    <li>@Html.ActionLink($"Week Of: {applicationUserWeek.RecipeWeek.WeekOf.ToShortDateString()}","Details", new{id= applicationUserWeek.ApplicationUserWeekId})</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add Meal plan", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Account")</p>
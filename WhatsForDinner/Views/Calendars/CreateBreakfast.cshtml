@{
  Layout = "_Layout";
}
@model List<WhatsForDinner.Models.Recipe>;
@if(Model.Count == 0 || Model.Count > 0 && Model.Count < 7){
<p>You don't have enough recipes in your collection for us to make meal plan for you, please add some to get started!</p>
}
else{
<div class="card-container">
@using(Html.BeginForm()){
    <div class ="row">
      <div id="calendar-card" class="col">
        <h4 class="day">Monday</h4>
        @Html.HiddenFor(m=>m[0].RecipeId)
        <p>@Html.TextBoxFor(m => m[0].Title, new { @readonly="readonly" })</p>
      </div>
      <div id="calendar-card" class="col">
        <h4 class="day">Tuesday</h4>
        @Html.HiddenFor(m=>m[1].RecipeId)
        <p>@Html.TextBoxFor(m => m[1].Title, new { @readonly="readonly" })</p>
      </div>
      <div id="calendar-card" class="col">
        <h4 class="day">Wednesday</h4>
        @Html.HiddenFor(m=>m[2].RecipeId)
        <p>@Html.TextBoxFor(m => m[2].Title, new { @readonly="readonly" })</p>
      </div>
      <div id="calendar-card" class="col">
        <h4 class="day">Thursday</h4>
        @Html.HiddenFor(m=>m[3].RecipeId)
        <p>@Html.TextBoxFor(m => m[3].Title, new { @readonly="readonly" })</p>
      </div>
    </div>
    <div class="row">
      <div id="calendar-card" class="col">
          <h4>Friday</h4>
          @Html.HiddenFor(m=>m[4].RecipeId)
          <p>@Html.TextBoxFor(m => m[4].Title, new { @readonly="readonly" })</p>
      </div>
      <div id="calendar-card" class="col">
          <h4 class="day">Saturday</h4>
          @Html.HiddenFor(m=>m[5].RecipeId)
          <p>@Html.TextBoxFor(m => m[5].Title, new { @readonly="readonly" })</p>
      </div>
      <div id="calendar-card" class="col">
        <h4 class="day">Sunday</h4>
        @Html.HiddenFor(m=>m[6].RecipeId)
        <p>@Html.TextBoxFor(m => m[6].Title, new { @readonly="readonly" })</p>
      </div>
    </div>
      <div class="row">
        <div id="calendar-card" class ="col">
          <input type="submit" class="submit" value="Save Meal Plan"><br>
          <div onClick="window.location.reload();" class="clickable">Reshuffle</div> 
        </div>
    </div>
  }
  </div>
}